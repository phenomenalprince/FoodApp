<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityToCreateAccount"
    android:background="#ffffff">

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Enter First Name"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:maxLines="1"
        android:maxLength="15"
        android:inputType="text"/>
    <EditText
        android:id="@+id/etLastName"
        android:layout_below="@id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Last Name"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:maxLines="1"
        android:maxLength="15"
        android:inputType="text"/>
    <EditText
        android:id="@+id/etRegisterNumber"
        android:layout_below="@id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Mobile Number"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableStart="@drawable/ic_baseline_smartphone_24"
        android:maxLines="1"
        android:maxLength="10"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_below="@id/etRegisterNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:textColorHint="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:inputType="textPassword"
        android:maxLines="1"/>
    <Button
        android:id="@+id/btnRegister"
        android:layout_below="@id/etRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#ffa533"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</RelativeLayout>